<section class="products-show">
  <header class="page-header">
    <h1>
      <%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %>
    </h1>
  </header>
  <article class="product-detail">
    <%= image_tag @product.image.url, class: 'main-img' %>
      <div>
        <h1>
          <%= @product.name %>
        </h1>
        <p>
          <%= @product.description %>
        </p>
        <div class="quantity">
          <span>
            <%= @product.quantity %> in stock at
          </span>
          <span>
            <%= humanized_money_with_symbol @product.price %>
          </span>
        </div>
        <div class="price">
          <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn' , method: :post do %>
            <%= fa_icon "shopping-cart" , text: 'Add' %>
          <% end %>
        </div>
      </div>
  </article>

  <section>
    <h3>Reviews</h3>
    <div class="container mt-3 pt-3 text-dark">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">

          <% @current_reviews.each do |i| %>
            <div class="card mb-3">
              <div class="card-body">
                <div class="d-flex flex-start">
                  <div class="w-100">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <h6 class="text-primary fw-bold mb-0">
                        <%= i.user.name %>
                          <span class="text-dark ms-2">
                            <%= i.description %>
                          </span>
                      </h6>
                      <p class="mb-0">
                        <%= time_ago_in_words(i.created_at) %> ago
                      </p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                      <p class="small mb-0">
                        Rating: <%= i.rating %>
                      </p>
                    </div>
                    <% if current_user && current_user.id == i.user.id %>
                      <div class="d-flex justify-content-between align-items-center">
                        <p class="small mb-0" style="color: #aaa;">
                          <%= form_for [@product, @review], method: :delete do |f| %>
                            <%= hidden_field_tag 'review_id', i.id  %>
                            <a href="#!" class="link-grey">Remove</a>
                            <%= f.submit %>
                          <% end %>
                        </p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </section>

    <% if current_user %>
      <%= form_for [@product, @review] do |f| %>
        Description: <%= f.text_area :description %>
        Rating: <%= f.select :rating, [1, 2, 3, 4, 5] %>
        <%= f.submit %>
      <% end %>
    <% end %>
